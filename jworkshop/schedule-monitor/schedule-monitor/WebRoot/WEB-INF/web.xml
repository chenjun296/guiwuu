<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<welcome-file-list>
		<welcome-file>monitor.jsp</welcome-file>
	</welcome-file-list>

	<!-- Spring Config Location -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:db.xml</param-value>
	</context-param>
	<!-- Spring ContextLoaderListener -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>ScheduleMonitor</servlet-name>
		<servlet-class>view.MonitorServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ScheduleInfoRefresh</servlet-name>
		<servlet-class>view.ScheduleInfoRefresh</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ScheduleMonitor</servlet-name>
		<url-pattern>/ScheduleMonitor</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ScheduleInfoRefresh</servlet-name>
		<url-pattern>/ScheduleInfoRefresh</url-pattern>
	</servlet-mapping>

</web-app>
