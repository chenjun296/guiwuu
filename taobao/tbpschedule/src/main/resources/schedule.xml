<?xml version="1.0" encoding="GB2312"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-autowire="byName">
	<!-- 任务处理类
	<bean id="taskSingle" class="com.guiwuu.workshop.tbpschedule.SimpleTask"
		init-method="init" lazy-init="false" depends-on="tbScheduleManagerFactory">
		<property name="taskType" value="PamirsScheduleTest"></property>
		<property name="ownSign" value="BASE"></property>
	</bean> -->

	<!-- 调度服务器配置 -->
	<bean id="scheduleConfigCenter"
		class="com.taobao.pamirs.schedule.ScheduleConfigCenterClientByDatabase">
		<property name="dataSource">
			<ref bean="schedule_source" />
		</property>
		<property name="tableMap">
			<map>
				<entry key="PAMIRS_SCHEDULE_QUEUE">
					<value>lottery_schedule_queue</value>
				</entry>
				<entry key="PAMIRS_SCHEDULE_SERVER">
					<value>lottery_schedule_server</value>
				</entry>
				<entry key="PAMIRS_SCHEDULE_SERVER_HIS">
					<value>lottery_schedule_server_history</value>
				</entry>
				<entry key="PAMIRS_SCHEDULE_TASKTYPE">
					<value>lottery_schedule_task_type</value>
				</entry>
				<entry key="PAMIRS_SCHEDULE_TASKTRUN">
					<value>lottery_schedule_task_run</value>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="tbScheduleManagerFactory" class="com.taobao.pamirs.schedule.TBScheduleManagerFactory"
		init-method="init">
		<property name="scheduleConfigCenter">
			<ref bean="scheduleConfigCenter" />
		</property>
		<property name="scheduleAlert">
			<ref bean="scheduleAlert" />
		</property>
	</bean>
	<bean id="scheduleAlert" class="com.guiwuu.workshop.tbpschedule.ScheduleAlert" />
	<bean id="monitorBean" class="com.taobao.pamirs.schedule.MonitorBean">
		<property name="scheduleConfigCenter">
			<ref bean="scheduleConfigCenter" />
		</property>
	</bean>
</beans>